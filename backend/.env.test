# ===========================================
# Test Environment Configuration
# ===========================================
# This file configures the backend for integration testing
# Use with: export $(cat .env.test | xargs)

# Environment (use 'development' to enable dev-only features)
ENVIRONMENT=development

# ===========================================
# Test Database Configuration
# ===========================================
# Matches docker-compose.yaml test-db service
# Port 5433 to avoid conflicts with local PostgreSQL

WRITE_DB_USER=test_user
WRITE_DB_PASSWORD=test_password
WRITE_DB_HOST=localhost
WRITE_DB_PORT=5433
WRITE_DB_NAME=test_little_boy

READ_DB_USER=test_user
READ_DB_PASSWORD=test_password
READ_DB_HOST=localhost
READ_DB_PORT=5433
READ_DB_NAME=test_little_boy

# Disable SSL for local test DB
DB_SSL_REQUIRED=false

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET_KEY=test-jwt-secret-key-for-integration-tests-only
JWT_ALGORITHM=HS256

# Token expiration (shorter for testing)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Authentication Configuration
# ===========================================
# Enable mock auth for E2E tests (allows test_ prefixed Firebase tokens)
MOCK_AUTH_ENABLED=true

# Firebase (use test project or leave empty for mock mode)
FIREBASE_PROJECT_ID=ygsa-bee32
FIREBASE_SERVICE_ACCOUNT_JSON=
GOOGLE_APPLICATION_CREDENTIALS=

# Kakao (not needed for most tests)
KAKAO_REST_API_KEY=
KAKAO_CLIENT_SECRET=

# ===========================================
# External Services (use test keys or empty)
# ===========================================
ANTHROPIC_API_KEY=test-key
GEMINI_API_KEY=test-key
FAL_API_KEY=test-key

# AWS S3 (not needed for most tests)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=test-bucket
AWS_REGION=ap-northeast-2
